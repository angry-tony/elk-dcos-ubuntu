{
  "id": "/${ELASTIC_SERVICE_NAME}",
  "instances": 1,
  "cpus": 0.5,
  "mem": 2048,
  "disk": 0,
  "gpus": 0,
  "constraints": [],
  "fetch": [],
  "storeUrls": [],
  "backoffSeconds": 1,
  "backoffFactor": 1.15,
  "maxLaunchDelaySeconds": 3600,
  "container": {
    "type": "DOCKER",
    "volumes": [
      {
        "containerPath": "${/usr/share/elasticsearch/data}",
        "hostPath": "/${/elasticsearch-data}",
        "mode": "RW"
      }
    ],
    "docker": {
      "image": "docker.elastic.co/elasticsearch/elasticsearch:5.5.2",
      "network": "HOST",
      "portMappings": [],
      "privileged": false,
      "parameters": [],
      "forcePullImage": false
    }
  },
  "healthChecks": [],
  "readinessChecks": [],
  "dependencies": [],
  "upgradeStrategy": {
    "minimumHealthCapacity": 1,
    "maximumOverCapacity": 1
  },
  "unreachableStrategy": {
    "inactiveAfterSeconds": 300,
    "expungeAfterSeconds": 600
  },
  "killSelection": "YOUNGEST_FIRST",
  "portDefinitions": [
    {
      "port": 9200,
      "protocol": "tcp",
      "name": "elasticsen"
    }
  ],
  "requirePorts": true,
  "env": {
    "cap-add": "IPC_LOCK",
    "discovery.zen.ping.unicast.hosts": "${ELASTIC_SERVICE_NAME}.marathon.mesos",
    "cluster.name": "${ELA_CLUSTER_NAME}",
    "node.name": "${ELA_NODE_NAME}",
    "network.host": "${ELA_NETWORK_HOST}",
    "ulimit": "nofile=65536:65536",
    "gateway.recover_after_nodes": "1",
    "ES_JAVA_OPTS": "-Xms1g -Xmx1g",
    "discovery.zen.minimum_master_nodes": "1"
  }
}
